<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      
      <!-- Header Section -->
      <div class="text-center mb-5">
        <div class="d-inline-block position-relative mb-3">
          <div class="icon-circle mx-auto d-flex align-items-center justify-content-center shadow-lg" 
               style="width: 80px; height: 80px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <i class="bi bi-pencil-square fs-1 text-white"></i>
          </div>
          <div class="position-absolute top-0 start-100 translate-middle">
            <span class="badge bg-success rounded-circle p-2">
              <i class="bi bi-plus-lg"></i>
            </span>
          </div>
        </div>
        
        <h1 class="display-4 fw-bold mb-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
          Create New Post
        </h1>
        <p class="text-muted fs-5">Share your thoughts with the world</p>
        
        <!-- Progress Dots -->
        <div class="d-flex justify-content-center gap-2 mt-4">
          <div class="rounded-circle" style="width: 8px; height: 8px; background: #667eea;"></div>
          <div class="rounded-circle" style="width: 8px; height: 8px; background: #ddd;"></div>
          <div class="rounded-circle" style="width: 8px; height: 8px; background: #ddd;"></div>
        </div>
      </div>

      <!-- Form Card -->
      <%= render "form", post: @post %>
      
      <!-- Back Link -->
      <div class="text-center mt-4">
        <%= link_to posts_path, class: "text-decoration-none text-muted" do %>
          <i class="bi bi-arrow-left me-2"></i>Back to all posts
        <% end %>
      </div>
      
    </div>
  </div>
</div>

<style>
.icon-circle {
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.icon-circle:hover {
  animation: none;
  transform: scale(1.1) rotate(5deg);
  transition: transform 0.3s ease;
}
</style>